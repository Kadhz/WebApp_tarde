@model List<WebApp_tarde.Entidades.EntidadeCategoria>

<div class="card">
    <div class="card-header">
        <h3>Lista de Categorias</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Ativo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var categoria in Model)
                {
                    <tr>
                        <td>
                            @categoria.Id
                        </td>
                        <td>
                            @categoria.Nome
                        </td>
                        <td>
                            @if (@categoria.Ativo)
                            {
                                <input type="checkbox" readonly checked />
                            }
                            else
                            {
                                <input type="checkbox" readonly />
                            }
                        </td>

                    
                        <td>
                            <a href="/categoria/editar/@categoria.Id" class="btn btn-warning">Editar</a>
                            <a href="/categoria/excluir/@categoria.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
