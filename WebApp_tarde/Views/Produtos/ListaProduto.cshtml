@model List<WebApp_tarde.Entidades.ProdutoEntidade>



<div class="card">
    <div class="card-header">
        <h2>Lista de produtos</h2>
    </div>
    <div class="card-body">


        <div class="row">
            <div class="col-2">
                <a href="/Produtos/CadastroProdutos" class="btn btn-success">
                    Novo produto
                </a>
            </div>

            <div class="col-3">
                <select name="filtro" class="form-control">
                    <option value="0">Todos os campos</option>
                    <option value="id">Por id</option>
                    <option value="nome">Por nome</option>
                    <option value="quantidade">Por quantidade</option>
                </select>
            </div>
            <div class="col-5">
                <input type="text" name="busca" class="form-control"></input>
            </div>
            <div class="col-2">
                <button class="btn btn-primary" type="submit">Pesquisar</button>
            </div>
        </div>

        <table class="table table-striped">


            <thead>
                <tr>
                    <th>Código</th>
                    <th>Produto</th>
                    <th>Valor</th>
                    <th>Quantidade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td>
                            @produto.Id
                        </td>
                        <td>
                            @produto.Descricao
                        </td>
                        <td>
                            @produto.Valor
                        </td>


                        <td>
                            <a href="/produtos/editar/@produto.Id" class="btn btn-warning">Editar</a>
                            <a href="/produtos/excluir/@produto.Id" class="btn btn-danger">Excluir</a>
                        </td>

                    </tr>
                }

            </tbody>



        </table>



    </div>
</div>